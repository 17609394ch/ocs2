<launch>
    <arg name="rviz"       default="false" />
    <arg name="task_name"  default="mpc"/>

    <group if="$(arg rviz)">
      <include file="$(find ocs2_mobile_manipulator_example)/launch/visualize.launch"/>
    </group>

    <node pkg="ocs2_mobile_manipulator_example" type="mobile_manipulator_mpc_node" name="mobile_manipulator_mpc_node"
          output="screen" args="$(arg task_name)" launch-prefix=""/>

    <node pkg="ocs2_mobile_manipulator_example" type="mobile_manipulator_dummy_mrt_node" name="mobile_manipulator_dummy_mrt_node"
          output="screen" args="$(arg task_name)" launch-prefix="gnome-terminal --"/>

    <node if="$(arg rviz)" pkg="ocs2_mobile_manipulator_example" type="mobile_manipulator_target" name="mobile_manipulator_target"
          output="screen" args="$(arg task_name)" launch-prefix="gnome-terminal --"/>
</launch>
