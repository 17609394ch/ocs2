systemParameters
{
    barrierTimePosition 50 ; time steps to barrier
    barrierLowerEnd -0.6;
    barrierUpperEnd  0.6;
}

pathIntegral
{
  gamma 0.1 ; temperature/level of noise
  numSamples 100 ; how many trajectories to sample
  debugPrint 0

  rollout_settings
  {
    minTimeStep 1; will be used as time step in PI
    integratorType 0; must be Euler (0) for PI to function
    checkNumericalStability 0
    reconstructInputTrajectory false; must be false for PI to function
  }
}

mpcTimeHorizon
{
    debugPrint 1
    timehorizon 100
    numPartitions 1
}

mpc
{
    debugPrint 1
    mpcDesiredFrequency 1
    mrtDesiredFrequency 1
    maxTimeStep 1
}

timeHorizon 100; time steps to end

initialState
{
  (0,0) 0.0
}

; state weight matrix
Q
{
  scaling 1e+0
  (0,0) 1.0
}

;  control weight matrix
R
{
   scaling 1e+2

   (0,0)  1.0
}


; final state weight matrix
Q_final
{
  scaling 1e+0
  (0,0)  1.0
}
